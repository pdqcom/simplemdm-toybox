#!/bin/bash
project_root="$(cd "$(dirname "${BASH_SOURCE[0]}")"/.. && pwd)"
use_api_console=""
use_frontend_console=""
command=""
help="Usage: $(basename "${BASH_SOURCE[0]}") [ -a -f -h]
Runs a shell in a given docker container with the appropriate volume mounts
Arguments:
  -a - run api console
  -f - run frontend console
  -h - print this usage.
"
while [[ $# -gt 0 ]]; do
  case $1 in
      -a)
        use_api_console='-r'
      ;;
      -f)
        use_frontend_console="-n"
      ;;
      -h)
        echo "$help"
        exit 0
      ;;
      *)
        command=$@
        break
      ;;
  esac
  shift
done

if [ -n "$use_api_console" ]; then
  echo "Starting API console" >&2
  if [ -z "$command" ]; then
    command="bash"
  fi
  docker compose run -it -v "$project_root/api":/var/www/api api $command
  exit
fi

if [ -n "$use_frontend_console" ]; then
  echo "Starting frontend console" >&2
  if [ -z "$command" ]; then
      command="sh"
    fi
  docker compose run -it -v "$project_root":/var/www/frontend frontend $command
  exit
fi

echo "Error: No console type specified" >&2;
exit 1
